<h1>Environments</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <%= link_to 'Create New Environment', new_environment_path %>

  <table>
    <thead>
    <tr>
      <th>Environment Name</th>
      <th>Environment Description</th>
      <th>Created By</th>
      <th>Created Date</th>
      <th>Last Modified By</th>
      <th>Last Modified Date</th>
      <th>Is Deleted</th>
      <th colspan="3"></th>
    </tr>
    </thead>


    <tbody>
    <% @environments.each do |environment| %>
        <tr>
          <td><%= environment.EnvironmentName %></td>
          <td><%= environment.EnvironmentDescription %></td>
          <td><%= environment.CreatedBy %></td>
          <td><%= environment.CreatedDate %></td>
          <td><%= environment.LastModifiedBy %></td>
          <td><%= environment.LastModifiedDate %></td>
          <td><%= environment.IsDeleted %></td>
          <td><%= link_to 'View', environment %></td>
          <td><%= link_to 'Update', edit_environment_path(environment) %></td>
          <td><%= link_to 'Delete', environment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
