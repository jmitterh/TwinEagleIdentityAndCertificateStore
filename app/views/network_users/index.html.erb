<h1>Network Users</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <%= link_to 'Create New Network User', new_network_user_path %>

  <table>
    <thead>
    <tr>
      <th>Network First Name</th>
      <th>Network Last Name</th>
      <th>Email</th>
      <th>Network Username</th>
      <th>Network Password</th>
      <th>Created By</th>
      <th>Created Date</th>
      <th>Last Modified By</th>
      <th>Last Modified Date</th>
      <th>Is Deleted</th>
      <th colspan="3"></th>
    </tr>
    </thead>


    <tbody>
    <% @network_users.each do |network_user| %>
        <tr>

          <td><%= network_user.NetworkFirstName %></td>
          <td><%= network_user.NetworkLastName %></td>
          <td><%= network_user.Email %></td>
          <td><%= network_user.NetworkUsername %></td>
          <td><%= network_user.NetworkPassword %></td>
          <td><%= network_user.CreatedBy %></td>
          <td><%= network_user.CreatedDate %></td>
          <td><%= network_user.LastModifiedBy %></td>
          <td><%= network_user.LastModifiedDate %></td>
          <td><%= network_user.IsDeleted %></td>
          <td><%= link_to 'View', network_user %></td>
          <td><%= link_to 'Update', edit_network_user_path(network_user) %></td>
          <td><%= link_to 'Delete', network_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
