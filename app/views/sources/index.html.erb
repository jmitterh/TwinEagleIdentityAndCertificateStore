<h1>Sources</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <%= link_to 'Create New Source', new_source_path %>

  <table>
    <thead>
    <tr>
      <th>Source Description</th>
      <th>Created By</th>
      <th>Created Date</th>
      <th>Last Modified By</th>
      <th>Last Modified Date</th>
      <th>Is Deleted</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @sources.each do |source| %>
        <tr>
          <td><%= source.SourceDescription %></td>
          <td><%= source.CreatedBy %></td>
          <td><%= source.CreatedDate %></td>
          <td><%= source.LastModifiedBy %></td>
          <td><%= source.LastModifiedDate %></td>
          <td><%= source.IsDeleted %></td>
          <td><%= link_to 'View', source %></td>
          <td><%= link_to 'Update', edit_source_path(source) %></td>
          <td><%= link_to 'Delete', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
