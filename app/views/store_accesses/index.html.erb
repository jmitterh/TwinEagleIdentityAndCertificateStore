<h1>Store Accesses</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <table>
    <thead>
    <tr>
      <th>UserStore Name</th>
      <th>CertStore Name</th>
      <th>Network Username</th>
      <th>Created By</th>
      <th>Created Date</th>
      <th>Last Modified By</th>
      <th>Last Modified Date</th>
      <th>Is Deleted</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @store_accesses.each do |store_access| %>
        <tr>

          <td><%= store_access.UserStore.UserStoreName %></td>
          <td><%= store_access.CertStore.CertStoreName %></td>
          <td><%= store_access.Network.NetworkUsername %></td>
          <td><%= store_access.CreatedBy %></td>
          <td><%= store_access.CreatedDate %></td>
          <td><%= store_access.LastModifiedBy %></td>
          <td><%= store_access.LastModifiedDate %></td>
          <td><%= store_access.IsDeleted %></td>
          <td><%= link_to 'View', store_access %></td>
          <td><%= link_to 'Update', edit_store_access_path(store_access) %></td>
          <td><%= link_to 'Delete', store_access, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
