<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>User Groups</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <%= link_to 'Create New User Group', new_user_group_path %>

  <table>
    <thead>
    <tr>
      <th>User Group Name</th>
      <th>Created By</th>
      <th>Created Date</th>
      <th>Last Modified By</th>
      <th>Last Modified Date</th>
      <th>Is Deleted</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @user_groups.each do |user_group| %>
        <tr>
          <td><%= user_group.UserGroupName %></td>
          <td><%= user_group.CreatedBy %></td>
          <td><%= user_group.CreatedDate %></td>
          <td><%= user_group.LastModifiedBy %></td>
          <td><%= user_group.LastModifiedDate %></td>
          <td><%= user_group.IsDeleted %></td>
          <td><%= link_to 'View', user_group %></td>
          <td><%= link_to 'Update', edit_user_group_path(user_group) %></td>
          <td><%= link_to 'Delete', user_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
