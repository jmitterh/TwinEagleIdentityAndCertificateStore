<h1>User Store</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <%= link_to 'Create New User', new_user_store_path %>

  <table>
    <thead>
    <tr>
      <th>UserStore Name</th>
      <th>UserStore Password</th>
      <th>UserStore Expiration Date</th>
      <th>Source Description</th>
      <th>Environment Name</th>
      <th>Identity Type Name</th>
      <th>Created By</th>
      <th>Created Date</th>
      <th>Last Modified By</th>
      <th>Last Modified Date</th>
      <th>Is Deleted</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @user_stores.each do |user_store| %>
        <tr>
          <td><%= user_store.UserStoreName %></td>
          <td><%= user_store.UserStorePassword %></td>
          <td><%= user_store.UserStoreExpirationDate %></td>
          <td><%= user_store.Source.SourceDescription %></td>
          <td><%= user_store.Environment.EnvironmentName %></td>
          <td><%= user_store.IdentityType.IdentityTypeName %></td>
          <td><%= user_store.CreatedBy %></td>
          <td><%= user_store.CreatedDate %></td>
          <td><%= user_store.LastModifiedBy %></td>
          <td><%= user_store.LastModifiedDate %></td>
          <td><%= user_store.IsDeleted %></td>
          <td><%= link_to 'View', user_store %></td>
          <td><%= link_to 'Update', edit_user_store_path(user_store) %></td>
          <td><%= link_to 'Delete', user_store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
