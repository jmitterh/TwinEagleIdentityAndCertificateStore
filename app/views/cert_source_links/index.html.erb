<h1>Certificate Source Links</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <table>
    <thead>
    <tr>
      <th>CertStore Name</th>
      <th>Source Link Hyperlink</th>
      <th>Created By</th>
      <th>Created Date</th>
      <th>Last Modified By</th>
      <th>Last Modified Date</th>
      <th>Is Deleted</th>
      <th colspan="3"></th>
    </tr>
    </thead>



    <tbody>
    <% @cert_source_links.each do |cert_source_link| %>
        <tr>
          <td><%= cert_source_link.CertStore.CertStoreName %>
          <td><%= cert_source_link.SourceLink.Hyperlink %></td>
          <td><%= cert_source_link.CreatedBy %></td>
          <td><%= cert_source_link.CreatedDate %></td>
          <td><%= cert_source_link.LastModifiedBy %></td>
          <td><%= cert_source_link.LastModifiedDate %></td>
          <td><%= cert_source_link.IsDeleted %></td>
          <td><%= link_to 'View', cert_store_link %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
